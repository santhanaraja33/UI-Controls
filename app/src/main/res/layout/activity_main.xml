<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UI Controls"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:hint="Edit Text" />

    <AutoCompleteTextView
        android:id="@+id/autoComplete"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/editText"
        android:layout_marginTop="21dp"
        android:layout_marginRight="-249dp"
        android:hint="Auto Complete Text" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="72dp"
        android:text="Click" />

    <ImageButton
        android:id="@+id/imgbtn"
        android:layout_width="181dp"
        android:layout_height="136dp"
        android:layout_below="@+id/autoComplete"
        android:layout_alignLeft="@+id/btn"
        android:layout_marginLeft="183dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/phonecon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgbtn"
        android:layout_marginTop="40dp"
        android:text="Check-Box :"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/checkbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgbtn"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="30dp"
        android:text="Click" />


    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="52dp"
        android:text="Do you like Java" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="85dp"
        android:text="Do you like Java" />

    <TextView
        android:id="@+id/Texttoggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox2"
        android:layout_marginTop="20dp"
        android:text="Toggle Buttton : "
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox2"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="7dp"
        android:text="Toggle Button"
        android:textOff="Off"
        android:textOn="On" />

    <ToggleButton
        android:id="@+id/toggle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox2"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="7dp"
        android:text="Toggle Button"
        android:textOff="Off"
        android:textOn="On" />

    <TextView
        android:id="@+id/radioText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Texttoggle"
        android:layout_marginTop="50dp"
        android:text="Radio Group: "
        android:textColor="@color/black"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Texttoggle"
        android:layout_alignLeft="@id/radioText">


        <RadioButton
            android:id="@+id/radioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="35dp"
            android:text="Yes"
            android:textStyle="bold"></RadioButton>

        <RadioButton
            android:id="@+id/radioBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:text="No"
            android:textStyle="bold"></RadioButton>
    </RadioGroup>

    <Button
        android:id="@+id/radioClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_below="@+id/toggle"
        android:layout_marginTop="38dp"
        android:text="Click.." />

</RelativeLayout>